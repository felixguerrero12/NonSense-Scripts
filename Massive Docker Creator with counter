# Felix Guerrero Jr.
# Please pull the wordpress docker
# 1. docker pull wordpress 
# 
#
# This script will create three different containers. 
# A seperate Docker container for MySQL, Wordpress and Data point.
#

file="counter.txt"
test -e $file || echo 0 > $file

echo "How much Wordpress applications do you want to create?"
read i

x=`cat $file`
for (( c=1; c <= i; c++))
do
        x=$(($x+1))
docker run --name wp$x_data --entrypoint /bin/echo busybox data-only
docker run --name wp$x -e VIRTUAL_HOST=blog$x.felix.com --volumes-from wp$x_data --link c1-mysql:mysql -e WORDPRESS_DB_NAME=wordpress$x -d wordpress
docker run --name db$x_data --entrypoint /bin/echo busybox dbdata-only
docker run --name c1-mysql --volumes-from db$x_data -e MYSQL_ROOT_PASSWORD=pizzapizza1 --restart:always -d mysql

echo $x
done
echo $x > counter.txt
cat counter.txt
